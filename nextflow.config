/*
========================================================================================
    wf-ont-germline Nextflow Configuration
========================================================================================
    Default configuration for ONT Germline Variant Calling Pipeline
    Compatible with EPI2ME Desktop Application
----------------------------------------------------------------------------------------
*/

// Global default params
params {
    
    // =====================
    // INPUT/OUTPUT OPTIONS
    // =====================
    input                      = null
    reference                  = null
    outdir                     = './results'
    sample_name                = null
    
    // =====================
    // ANALYSIS OPTIONS
    // =====================
    
    // Variant calling
    variant_caller             = 'clair3'           // 'clair3' or 'pepper_deepvariant'
    call_svs                   = true               // Call structural variants
    call_cnvs                  = true               // Call copy number variants
    phase_variants             = true               // Phase variants with WhatsHap
    call_methylation           = true               // Call methylation with modkit
    annotate_variants          = true               // Annotate variants
    
    // =====================
    // MODEL/CHEMISTRY
    // =====================
    basecall_model             = 'dna_r10.4.1_e8.2_400bps_sup@v4.3.0'
    clair3_model               = '/opt/models/ont_r10_dorado_sup_4khz'
    pepper_model               = 'ont_r10_q20'
    
    // =====================
    // ALIGNMENT OPTIONS
    // =====================
    minimap2_preset            = 'map-ont'
    minimap2_args              = ''
    
    // =====================
    // VARIANT CALLING OPTIONS
    // =====================
    
    // Clair3 options
    include_all_ctgs           = true
    haploid_precise            = false
    haploid_sensitive          = false
    clair3_enable_phasing      = false
    clair3_args                = ''
    output_gvcf                = false
    
    // PEPPER-DeepVariant options
    pepper_phased_output       = false
    pepper_args                = ''
    
    // SV calling options
    min_sv_length              = 50
    min_sv_support             = 'auto'
    sv_caller_secondary        = false              // Also run CuteSV
    sniffles_args              = ''
    
    // CNV calling options
    cnv_caller                 = 'spectre'          // 'spectre', 'qdnaseq', or 'cnvpytor'
    spectre_bin_size           = 1000
    spectre_min_cnv_len        = 100000
    spectre_args               = ''
    
    // =====================
    // PHASING OPTIONS
    // =====================
    phase_indels               = true
    ignore_read_groups         = true
    output_haplotag_list       = false
    output_phasing_gtf         = false
    output_block_list          = false
    use_longphase              = false
    whatshap_phase_args        = ''
    whatshap_haplotag_args     = ''
    
    // =====================
    // METHYLATION OPTIONS
    // =====================
    methylation_motif          = 'CG 0'
    modkit_filter_threshold    = 0.75
    partition_by_haplotype     = true
    combine_mods               = false
    extract_methylation        = false
    call_dmr                   = false
    modkit_pileup_args         = ''
    
    // =====================
    // ANNOTATION OPTIONS
    // =====================
    genome_assembly            = 'GRCh38'
    species                    = 'homo_sapiens'
    vep_cache                  = null
    vep_args                   = ''
    
    // Annotation databases (paths)
    clinvar_vcf                = null
    clinvar_tbi                = null
    gnomad_vcf                 = null
    gnomad_tbi                 = null
    dbsnp_vcf                  = null
    dbsnp_tbi                  = null
    cadd_snvs                  = null
    cadd_snvs_tbi              = null
    cadd_indels                = null
    cadd_indels_tbi            = null
    revel_file                 = null
    revel_tbi                  = null
    spliceai_snvs              = null
    spliceai_snvs_tbi          = null
    spliceai_indels            = null
    spliceai_indels_tbi        = null
    pharmgkb_vcf               = null
    pharmgkb_tbi               = null
    cosmic_vcf                 = null
    cosmic_tbi                 = null
    omim_bed                   = null
    
    // Clinical filtering
    rare_af_threshold          = 0.01
    cadd_threshold             = 20
    
    // =====================
    // QC OPTIONS
    // =====================
    min_pass_qual              = 7
    mosdepth_threshold         = '1,10,20,30'
    mosdepth_window            = 500
    
    // =====================
    // RESOURCE OPTIONS
    // =====================
    max_cpus                   = 16
    max_memory                 = '64.GB'
    max_time                   = '240.h'
    
    // =====================
    // GENERIC OPTIONS
    // =====================
    help                       = false
    version                    = false
    monochrome_logs            = false
    validate_params            = true
    show_hidden_params         = false
    schema_ignore_params       = 'genomes'
    
    // MultiQC options
    multiqc_config             = null
    multiqc_title              = null
    
    // =====================
    // EPI2ME OPTIONS
    // =====================
    wf_name                    = 'wf-ont-germline'
    wf_version                 = '1.0.0'
    disable_ping               = false
    
}

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'

// Load modules.config for DSL2 module specific options
includeConfig 'conf/modules.config'

// Profiles
profiles {
    
    debug {
        dumpHashes             = true
        process.beforeScript   = 'echo $HOSTNAME'
        cleanup                = false
    }
    
    docker {
        docker.enabled         = true
        docker.userEmulation   = true
        conda.enabled          = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        apptainer.enabled      = false
    }
    
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        conda.enabled          = false
        docker.enabled         = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        apptainer.enabled      = false
    }
    
    podman {
        podman.enabled         = true
        conda.enabled          = false
        docker.enabled         = false
        singularity.enabled    = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        apptainer.enabled      = false
    }
    
    conda {
        conda.enabled          = true
        docker.enabled         = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        apptainer.enabled      = false
    }
    
    // EPI2ME Desktop profile
    epi2me {
        docker.enabled         = true
        docker.userEmulation   = true
        
        // EPI2ME specific settings
        params.disable_ping    = true
        
        // Resource limits for desktop
        params.max_cpus        = 8
        params.max_memory      = '32.GB'
        
        // Progress reporting
        timeline.enabled       = true
        report.enabled         = true
        trace.enabled          = true
        dag.enabled            = true
    }
    
    // Standard profile for local execution
    standard {
        docker.enabled         = true
        docker.userEmulation   = true
    }
    
    // Test profile with minimal resources
    test {
        includeConfig 'conf/test.config'
    }
    
    // Test profile with full-size data
    test_full {
        includeConfig 'conf/test_full.config'
    }
    
    // AWS Batch profile
    awsbatch {
        includeConfig 'conf/awsbatch.config'
    }
    
    // Google Cloud profile
    gcp {
        includeConfig 'conf/gcp.config'
    }
    
    // SLURM HPC profile
    slurm {
        includeConfig 'conf/slurm.config'
    }
    
    // LSF HPC profile
    lsf {
        includeConfig 'conf/lsf.config'
    }
}

// Set default registry for Docker images
docker.registry = 'quay.io'
singularity.registry = 'quay.io'

// Nextflow plugins
plugins {
    id 'nf-validation@1.1.3'
}

// Export these variables to prevent local Python/R libraries from conflicting
env {
    PYTHONNOUSERSITE = 1
    R_PROFILE_USER   = "/.Rprofile"
    R_ENVIRON_USER   = "/.Renviron"
}

// Capture exit codes from upstream processes when piping
process.shell = ['/bin/bash', '-euo', 'pipefail']

def trace_timestamp = new java.util.Date().format('yyyy-MM-dd_HH-mm-ss')

// Timeline, report, trace, and DAG
timeline {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_timeline_${trace_timestamp}.html"
}

report {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_report_${trace_timestamp}.html"
}

trace {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_trace_${trace_timestamp}.txt"
    fields  = 'task_id,hash,native_id,process,tag,name,status,exit,module,container,cpus,time,disk,memory,attempt,submit,start,complete,duration,realtime,queue,%cpu,%mem,rss,vmem,peak_rss,peak_vmem,rchar,wchar,syscr,syscw,read_bytes,write_bytes,vol_ctxt,inv_ctxt,env,workdir,script,scratch,error_action'
}

dag {
    enabled = true
    file    = "${params.outdir}/pipeline_info/pipeline_dag_${trace_timestamp}.html"
}

// Manifest - IMPORTANT: 'name' must match your GitHub username/repo
manifest {
    name            = 'musicofthings/wf-ont-germline'
    author          = 'Biomni'
    homePage        = 'https://github.com/musicofthings/wf-ont-germline'
    description     = 'ONT Long-Read Germline Variant Calling Pipeline'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=23.04.0'
    version         = '1.0.0'
    doi             = ''
}

// Function to ensure that resource requirements don't go beyond a maximum limit
def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max memory '${params.max_memory}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max time '${params.max_time}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min( obj, params.max_cpus as int )
        } catch (all) {
            println "   ### ERROR ###   Max cpus '${params.max_cpus}' is not valid! Using default value: $obj"
            return obj
        }
    }
}
